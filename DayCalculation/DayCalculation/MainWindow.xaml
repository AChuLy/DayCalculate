        <TextBox x:Name="Stuff" HorizontalAlignment="Left" Height="18" Margin="231,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212"/>
        <TextBlock HorizontalAlignment="Left" Margin="249,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107"><Run Text="Number of Da"/><Run Text="y to Collect Money"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="490,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Text="Baht/day"/>
        <TextBlock HorizontalAlignment="Left" Margin="490,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Text="Baht/day"/>
        <TextBlock HorizontalAlignment="Left" Margin="490,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Text="Baht"/>
        <TextBlock HorizontalAlignment="Left" Margin="490,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Text="Day"/>

    </Grid>
</Window>
